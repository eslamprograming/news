@model List<news>
@{
    ViewBag.Title = "usernews";
    //Layout = null;
}
<div style="margin-top:100px">
    <h2>usernews</h2>

    <table style="width:100%;height:20%">
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.title</td>
                <td rowspan="1"><img src="@item.photo" alt="Alternate Text" style="width:400px;height:200px" /></td>
            </tr>
            <tr>
                <td rowspan="2">@item.bref</td>
                <td rowspan="1"><a href="/news/Detalis/@item.id">description</a>||<a href="/news/Edit/@item.id">Edit</a>||<a href="/news/Delete/@item.id">delete</a></td>
            </tr>
            <tr>
                <td><a href="/comment_news/Index/@item.id">comments</a></td>
                <td>@item.catalog.name</td>
                <td rowspan="1"><a href="/news/like/@item.id">like</a></td>
            </tr>

        }
    </table>
    <div><a href="/news/add">add news</a></div>
</div>