<!DOCTYPE html>
<html>
<head>

    <meta charset="utf-8">
    <title>RegistrationForm_v3 by Colorlib</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="https://use.fontawesome.com/3a2eaf6206.js"></script>

    <!-- MATERIAL DESIGN ICONIC FONT -->
    <link rel="stylesheet" href="`~/Register_design/fonts/material-design-iconic-font/css/material-design-iconic-font.min.css">

    <!-- STYLE CSS -->
    <link rel="stylesheet" href="~/Register_design/css/style.css">
    <style>
        #div:hover {
            background-color: #ff7106;
            color: black;
            font-size: 25px;
        }

        .div {
            text-align: center;
            padding: 3%;
            border: thin solid black;
        }

        .input {
            display: none;
        }

        .label {
            cursor: pointer;
        }

        #imageName {
            color: green;
        }
    </style>
</head>
<body>

    <div style="margin-top:122px">
        <h2>add</h2>
        <form method="post" enctype="multipart/form-data">
            <table>
                <tr>
                    <td>@Html.LabelFor(n => n.title, new { @class = "form-control" })</td>
                    <td>@Html.TextBoxFor(n => n.title, new { @class = "form-control" })</td>
                    <td>@Html.ValidationMessageFor(n => n.title)</td>
                    <td></td>
                </tr>
                <tr>
                    <td>@Html.LabelFor(n => n.bref, new { @class = "form-control" })</td>
                    <td>@Html.TextAreaFor(n => n.bref, new { @class = "form-control" })</td>
                    <td>@Html.ValidationMessageFor(n => n.bref)</td>
                    <td></td>
                </tr>


                <tr>
                    <td>@Html.LabelFor(n => n.photo)</td>
                    <td>
                        <div class="div">
                            <label class="label" for="inputTag">
                                Select Image <br />
                                <i class="fa fa-2x fa-camera"></i>
                                <input class="input" id="inputTag" type="file" name="img" />
                                <br />
                                <span id="imageName"></span>
                            </label>
                        </div>
                    </td>
                    <td></td>
                </tr>
                @*<tr>
                <td></td>
                <td></td>
                <td></td>
                <td></td>
            </tr>*@
                @*<tr>
                <td>@Html.LabelFor(n => n.desc, new { @class = "form-control" })</td>
                <td colspan="2" rowspan="2">@Html.TextAreaFor(n => n.desc, new { @class = "form-control" })</td>
                <td>@Html.ValidationMessageFor(n => n.desc)</td>

            </tr>*@
                @*<tr>
                <td></td>
                <td><input type="submit" value="add" class="form-control" /></td>
                <td></td>
                <td></td>
            </tr>*@
            </table>

            <center>
                <div>@Html.LabelFor(n => n.desc, new { @class = "form-control", style = "width:200px;" })</div>
                <div>
                    @*@Html.TextBoxFor(n => n.desc, new { @class = "form-control" , style = "width:1200px;height:800px" ,
            rows = "15" ,cols = "60" })*@

                <textarea rows="15" cols="172" name="desc" placeholder="Enter text"></textarea>
            </div>
            <div>@Html.ValidationMessageFor(n => n.desc)</div>
            </center>

            <br />
            <br />
            <input type="submit" value="add" class="form-control" />
        </form>
    </div>
    <script src="~/Scripts/jquery-3.4.1.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
</body>
</html>